{
  "name": "hoardr",
  "version": "0.1.0",
  "private": true,
  "author": "@sskiswani",
  "repository": "github:sskiswani/hoardr",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "run-s build start:next",
    "start:next": "next start",
    "lint": "next lint",
    "postinstall": "run-s db:generate db:push",
    "prisma": "prisma",
    "db": "run-s db:*",
    "db:generate": "prisma generate",
    "db:push": "dotenv -c -- prisma db push --skip-generate",
    "clean": "rimraf prisma/*.sql .next"
  },
  "dependencies": {
    "@emotion/react": "^11.10.6",
    "@emotion/server": "^11.10.0",
    "@mantine/core": "^6.0.4",
    "@mantine/dropzone": "^6.0.4",
    "@mantine/hooks": "^6.0.4",
    "@mantine/next": "^6.0.4",
    "@prisma/client": "^4.11.0",
    "@tabler/icons-react": "^2.11.0",
    "axios": "^1.3.4",
    "formidable": "^2.1.1",
    "glob": "^9.3.2",
    "mime": "^3.0.0",
    "next": "13.2.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "swr": "^2.1.1"
  },
  "devDependencies": {
    "@types/formidable": "^2.0.5",
    "@types/mime": "^3.0.1",
    "@types/node": "18.15.7",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "dotenv-cli": "^7.1.0",
    "eslint": "8.36.0",
    "eslint-config-next": "13.2.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "prisma": "^4.11.0",
    "rimraf": "^4.4.1",
    "typescript": "5.0.2"
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "bracketSameLine": true,
    "printWidth": 130,
    "proseWrap": "preserve",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  }
}
